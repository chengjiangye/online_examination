<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="paper">
    <select id="list" resultType="paper">
        SELECT *
        FROM db_examination.paper
        ORDER BY id
    </select>
    <select id="queryById" resultType="paper">
        SELECT *
        FROM db_examination.paper
        WHERE id = #{id}
    </select>
    <update id="modify">
        UPDATE db_examination.paper
        SET
            time = #{time}, 
            score = #{score}, 
            teacherId = #{teacherId}, 
            courseId = #{courseId}
        WHERE id = #{id}
    </update>
    <delete id="remove">
        DELETE FROM db_examination.paper
        WHERE id = #{id}
    </delete>
    <insert id="create" parameterType="paper" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO db_examination.paper (
            time,
            score,
            teacherId,
            courseId
        )
        VALUES (
            #{time}, 
            #{score}, 
            #{teacherId}, 
            #{courseId}
        );
    </insert>

    <resultMap id="map_queryPapersByTeacherId" type="paper">
        <id property="id" column="id"/>
        <result property="time" column="time"/>
        <result property="score" column="score"/>
        <association property="teacher" javaType="teacher">
            <result property="username" column="username"/>
        </association>
        <association property="course" javaType="course">
            <result property="title" column="title"/>
        </association>
    </resultMap>
    <select id="queryPapersByTeacherId" parameterType="int" resultMap="map_queryPapersByTeacherId">
        SELECT
            p.id,
            p.time,
            p.score,
            t.username,
            c.title
        FROM db_examination.paper p INNER JOIN db_examination.teacher t
            INNER JOIN db_examination.course c
                ON p.teacherId = t.id AND p.courseId = c.id
        WHERE t.id = #{id}
    </select>
</mapper>